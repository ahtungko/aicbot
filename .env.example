# =============================================================================
# AICBot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control
# =============================================================================

# =============================================================================
# Environment Settings
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# API Keys & Secrets
# =============================================================================
# Manus AI API Key - Required for chat functionality
MANUS_API_KEY=your-manus-api-key-here

# JWT Secret for authentication - Generate a strong, random string
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# JWT Expiration time
JWT_EXPIRES_IN=7d

# =============================================================================
# Backend Configuration
# =============================================================================
# Backend server port (default: 5000)
PORT=5000

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# CORS allowed origins (comma-separated, or * for all)
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Manus AI Configuration
# =============================================================================
# Manus API base URL (usually don't need to change)
MANUS_API_URL=https://api.manus.ai

# Default AI model to use
MANUS_MODEL=manus-gpt-4

# Request timeout in milliseconds
MANUS_TIMEOUT=30000

# Maximum tokens per response
MANUS_MAX_TOKENS=2048

# Temperature for AI responses (0.0 to 2.0)
MANUS_TEMPERATURE=0.7

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
# PostgreSQL database URL
DATABASE_URL=postgresql://username:password@localhost:5432/aicbot

# Database connection pool size
DB_POOL_SIZE=10

# Database connection timeout
DB_TIMEOUT=10000

# =============================================================================
# Redis Configuration (Optional - for caching and sessions)
# =============================================================================
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis password (if required)
REDIS_PASSWORD=

# Redis database number
REDIS_DB=0

# Redis key prefix
REDIS_KEY_PREFIX=aicbot:

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Rate limiting window in minutes
RATE_LIMIT_WINDOW=15

# Maximum requests per window per IP
RATE_LIMIT_MAX=100

# Skip rate limiting for these IPs (comma-separated)
RATE_LIMIT_SKIP_IPS=127.0.0.1,::1

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, simple
LOG_FORMAT=json

# Log file path (optional, defaults to console)
LOG_FILE=

# Enable request logging
LOG_REQUESTS=true

# =============================================================================
# Security Configuration
# =============================================================================
# Force HTTPS in production
FORCE_HTTPS=false

# Session secret for express-session
SESSION_SECRET=your-session-secret-here

# Password hashing rounds
BCRYPT_ROUNDS=12

# Maximum file upload size in bytes
MAX_FILE_SIZE=10485760

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email from address
EMAIL_FROM=noreply@aicbot.com

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================
# Google Analytics Tracking ID
GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Prometheus metrics endpoint
METRICS_ENABLED=true
METRICS_PATH=/metrics

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (additional logging, relaxed security)
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Mock external APIs for development
MOCK_APIS=false

# =============================================================================
# Production Settings
# =============================================================================
# Enable compression
COMPRESSION=true

# Enable clustering (multiple processes)
CLUSTERING=false

# Number of cluster workers (auto-detected if not specified)
CLUSTER_WORKERS=

# Graceful shutdown timeout in milliseconds
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# =============================================================================
# Frontend Environment Variables
# =============================================================================
# These variables are prefixed with REACT_APP_ and will be available in the frontend

# Frontend API base URL
REACT_APP_API_URL=http://localhost:5000

# Frontend WebSocket URL
REACT_APP_WS_URL=ws://localhost:5000

# Application name
REACT_APP_APP_NAME=AICBot

# Application version
REACT_APP_APP_VERSION=1.0.0

# Maximum message length
REACT_APP_MAX_MESSAGE_LENGTH=4000

# Typing indicator timeout in milliseconds
REACT_APP_TYPING_TIMEOUT=3000

# WebSocket reconnection attempts
REACT_APP_RECONNECT_ATTEMPTS=5

# WebSocket reconnection delay in milliseconds
REACT_APP_RECONNECT_DELAY=1000

# Enable offline support
REACT_APP_OFFLINE_SUPPORT=true

# Default theme: light, dark
REACT_APP_THEME=light

# Google Analytics ID for frontend
REACT_APP_ANALYTICS_ID=

# Enable debug mode in frontend
REACT_APP_DEBUG=false

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker container user (leave empty for default)
DOCKER_USER=

# Docker container group (leave empty for default)
DOCKER_GROUP=

# =============================================================================
# CI/CD Configuration
# =============================================================================
# Build number (usually set by CI/CD pipeline)
BUILD_NUMBER=

# Git commit SHA
GIT_COMMIT=

# Deployment environment
DEPLOYMENT_ENV=development

# =============================================================================
# Feature Flags
# =============================================================================
# Enable user authentication
ENABLE_AUTH=true

# Enable user registration
ENABLE_REGISTRATION=true

# Enable chat history persistence
ENABLE_CHAT_HISTORY=true

# Enable file uploads
ENABLE_FILE_UPLOADS=false

# Enable voice input
ENABLE_VOICE_INPUT=false

# Enable analytics tracking
ENABLE_ANALYTICS=false

# Enable error reporting
ENABLE_ERROR_REPORTING=false

# =============================================================================
# Third-party Integrations (Optional)
# =============================================================================
# OpenAI API Key (alternative to Manus)
OPENAI_API_KEY=

# Anthropic API Key (alternative to Manus)
ANTHROPIC_API_KEY=

# Slack Bot Token (for Slack integration)
SLACK_BOT_TOKEN=

# Discord Bot Token (for Discord integration)
DISCORD_BOT_TOKEN=

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database URL
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/aicbot_test

# Test Redis URL
TEST_REDIS_URL=redis://localhost:6379/1

# Enable test mode
TEST_MODE=false

# Mock external services in tests
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# Development Tools
# =============================================================================
# Enable Swagger/OpenAPI documentation
ENABLE_SWAGGER=true

# Swagger documentation path
SWAGGER_PATH=/docs

# Enable GraphQL playground (if using GraphQL)
ENABLE_GRAPHQL_PLAYGROUND=false

# GraphQL playground path
GRAPHQL_PLAYGROUND_PATH=/graphql

# =============================================================================
# Performance Optimization
# =============================================================================
# Enable response caching
ENABLE_CACHE=true

# Cache TTL in seconds
CACHE_TTL=300

# Enable gzip compression
ENABLE_GZIP=true

# Enable static file caching
STATIC_CACHE_TTL=86400

# =============================================================================
# Localization (Optional)
# =============================================================================
# Default language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# =============================================================================
# Additional Notes
# =============================================================================
# 1. Always use strong, unique secrets for production environments
# 2. Store sensitive values in secure vaults or environment-specific files
# 3. Rotate API keys and secrets regularly
# 4. Use different values for development, staging, and production
# 5. Never commit this file with actual values to version control
# 6. Consider using environment-specific .env files (.env.development, .env.production)
# 7. For production, consider using a secrets management service like AWS Secrets Manager or HashiCorp Vault
